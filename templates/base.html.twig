<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Location de voyage{% endblock %} | BNB</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@700;900&family=Poppins:wght@300;500&display=swap"
          rel="stylesheet">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
</head>
<body>
<header class="d-flex justify-content-between align-items-center p-3 bg-dark">
    <a href="{{ path('paris') }}" class="text-white text-decoration-none">
        <img src={{ asset('/images/icon.svg') }} alt="logo" width="40"/>
    </a>
    <div class="d-flex gap-3 align-items-center">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="#" class="text-white text-decoration-none">My account</a>
        <a href={{ path('app_logout') }} class="btn btn-light rounded-pill">Logout</a>
    {% else %}
        <a href={{ path('app_register') }} class="text-white text-decoration-none">Sign up</a>
        <a href={{ path('app_login') }} class="btn btn-light rounded-pill">Sign In</a>
    {% endif %}
    </div>
</header>
<main>
    {% block body %}{% endblock %}
</main>
<footer class="d-flex gap-3 w-100 justify-content-center">
    <a href={{ path('paris')}} class="text-white text-decoration-none">Paris</a>
    <a href={{ path('lasvegas')}} class="text-white text-decoration-none">Las Vegas</a>
    <a href={{ path('kyoto')}} class="text-white text-decoration-none">Kyoto</a>
    <a href={{ path('sydney')}} class="text-white text-decoration-none">Sydney</a>
    <a href={{ path('hongkong')}} class="text-white text-decoration-none">Hong Kong</a>
</footer>

</body>
</html>
